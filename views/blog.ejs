<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head.ejs") %>
    <title>Blog</title>
  </head>
  <body>
    <%- include("./partials/nav.ejs") %>
    <div class="container mt-4">
      <h1><%= blog.title %></h1>
      <img src="<%= blog.coverImageUrl %>" width="700px" />
      <pre class="mt-3"><%= blog.body %></pre>
    </div>
    <div class="container mt-4 d-flex align-items-center">
      <img
        src="<%= blog.createdBy.profileImageUrl %>"
        class="rounded-circle me-2"
        width="50"
      />
      <strong><%= blog.createdBy.fullName %></strong>
    </div>
    <div class="container mt-4">
      <h4>Comments (<%= comments.length %>)</h4>
      <% if (locals.user) { %>
      <form action="/blog/comment/<%= blog._id %>" method="POST" class="mb-3">
        <div class="input-group">
          <input
            type="text"
            class="form-control"
            name="content"
            placeholder="Write a comment..."
          />
          <button type="submit" class="btn btn-primary">Post</button>
        </div>
      </form>
      <form action="/blog/<%= blog._id %>/like" method="POST" class="mb-3">
        <button type="submit" class="btn btn-outline-primary">
          üëç <%= blog.likes.includes(user._id.toString()) ? "Unlike" : "Like" %>
          (<%= blog.likes.length %>)
        </button>
      </form>
      <% } %>
      <div class="mt-3">
        <% comments.forEach(comment => { %>
        <div class="comment-box d-flex align-items-start">
          <img
            src="<%= comment.createdBy.profileImageUrl %>"
            class="rounded-circle me-2"
            width="40"
          />
          <div>
            <strong><%= comment.createdBy.fullName %></strong>
            <p class="mb-0"><%= comment.content %></p>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <%-include("./partials/script.ejs") %>
  </body>
</html>
